                                        <input id="navbar-search" class="uk-search-input" type="search" placeholder="Search..." autofocus>
                                    </form>
                                    <ul id="navbar-search-results" class="uk-position-absolute uk-width-1-1 uk-list"></ul>
                                </div>
                            </div>
