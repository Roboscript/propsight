    <main aria-label="Content">
        <div class="uk-section">
            <div class="uk-container uk-container-small">
                <div class="uk-margin uk-grid">
                    <div class="uk-width-2-3">
                        <div class="uk-form-label">
                            <h1>Payment info</h1>
                        </div>
                        <div class="uk-form-controls">
                            <label>
                                <input class="uk-radio" type="radio" name="stripe"> Stripe</label>
                            <br>
                            <label>
                                <input class="uk-radio" type="radio" name="paynow">
                                <img src="payment.png"> </label>
                        </div>
                    </div>
                    <div class="uk-width-1-3">
                        <h2 class="">Purchase Details</h2>
                        <hr class="uk-grid-divider">
                        <ul class="uk-list">
                            <li>Plan:<strong>{{info.plan}}</strong>
                                <br>
                                <strong> 14 day trial</strong>
                            </li>
                            <li>Price: ${{info.price}}</li>
                        </ul>
                        <form action="/users/payments" method="POST">
                            <button type="submit" name= "plan" value= "{{info.plan}}" class="uk-button uk-button-large uk-margin-top">Start Trial</button>
                            <p>Your selected subscription plan may automatically renew unless you cancel. For further details
                                regarding automatic renewal and cancellation, please review our Terms of Use.</p>
                        </form>

                    </div>

                </div>
            </div>
        </div>

    </main>

